extends layout

block content
  h1= title
  button.btn(class="btn-success ml-1", onclick="window.location.href='upliftedartwork/create'") Create Upliftedartwork
  - var results = results
  div(class='container-fluid')
    each result, index in results
      - let destination=`dispatch(\"/upliftedartwork/update?id=${result._id}\")`
      - let detailDestination=`dispatch(\"/upliftedartwork/detail?id=${result._id}\")`
      - let deleteDestination=`dispatch(\"/upliftedartwork/delete?id=${result._id}\")`
      div(class='row', onclick=`buy(${index})`)
        button.btn(class="btn-primary mb-2 col-sm-2", onclick= destination) Update
        button.btn(class="btn-primary mb-2 col-sm-2", onclick= detailDestination) detail
        button.btn(class="btn-primary mb-2 col-sm-2", onclick= deleteDestination) delete
        div(class='col-sm-2') #{result.material} 
        div(class='col-sm-2') #{result.style} 
        div(class='col-sm-2') #{result.price}

  script.
    function buy(index) {
      alert('You purchased item ' + index);
    }
    function dispatch(path){
      window.location.href=path
    }